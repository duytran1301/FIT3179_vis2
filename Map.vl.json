{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "",
  "data": {
    "url": "https://raw.githubusercontent.com/duytran1301/FIT3179_vis2/main/ne_110m_admin_0_countries.topojson",
    "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
  },
  "params": [
    {
      "name": "zoom_level",
      "value": 250,
      "bind": {
        "input": "range",
        "min": 0,
        "max": 800,
        "step": 10,
        "name": "Zoom:"
      }
    }
  ],
  "concat": [
    {
      "width": 800,
      "height": 600,
      "title": "World Crime Rate 2020",
      "projection": {
        "type": "equirectangular",
        "scale": {"expr": "zoom_level"}
      },
      "layer": [
        {
          "data": {
            "url": "https://raw.githubusercontent.com/duytran1301/FIT3179_vis2/main/ne_110m_ocean.json",
            "format": {"type": "topojson", "feature": "oceans"}
          },
          "mark": {"type": "geoshape", "fill": "paleturquoise"}
        },
        {
          "data": {
            "url": "https://raw.githubusercontent.com/duytran1301/FIT3179_vis2/main/ne_110m_admin_0_countries.topojson",
            "format": {
              "type": "topojson",
              "feature": "ne_110m_admin_0_countries"
            }
          },
          "mark": {"type": "geoshape", "stroke": "#000000"},
          "params": [{"name": "country", "select": {"type": "point"}}],
          "transform": [
            {
              "lookup": "properties.NAME",
              "from": {
                "data": {
                  "url": "https://raw.githubusercontent.com/duytran1301/FIT3179_vis2/main/csvData.csv"
                },
                "key": "Name",
                "fields": ["crimeIndex", "population"]
              }
            },
            {
              "joinaggregate": [
                {"op": "sum", "field": "crimeIndex", "as": "Crime Number"}
              ]
            },
            {"calculate": "datum.crimeIndex", "as": "Crime Number"}
          ],
          "encoding": {
            "color": {
              "field": "Crime Number",
              "type": "quantitative",
              "scale": {
                "type": "threshold",
                "domain": [0, 10, 35, 40, 45, 50, 55, 60, 65, 70],
                "scheme": "reds"
              }
            },
            "tooltip": [
              {
                "field": "properties.NAME",
                "type": "nominal",
                "title": "Country"
              },
              {
                "field": "population",
                "title": "Population",
                "type": "quantitative",
                "format": ".0f"
              },
              {"field": "Crime Number", "type": "quantitative", "format": ".2f"}
            ]
          }
        },
        {
          "data": {
            "url": "https://raw.githubusercontent.com/duytran1301/FIT3179_vis2/main/ne_110m.json",
            "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
          },
          "mark": {"type": "geoshape", "fill": null, "stroke": "gray"}
        }
      ]
    }
  ],
  "config": {}
}