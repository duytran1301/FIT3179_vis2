{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {"text":"Australia Crime Rate Over Decades","fontSize":20},
  "width": 550,
  "height": 300,
  "data": {
    "url": "https://raw.githubusercontent.com/duytran1301/FIT3179_vis2/main/ASSET/australia-crime-rate-statistics.csv"
  },
  "params": [{"name": "brush", "select": "interval"}],
  "transform": [{"window": [{"op": "row_number", "as": "row_number"}]}],
  "config": {"mark": {"width": 15}},
  "encoding": {
    "x": {
      "field": "Year",
      "type": "ordinal",
      "axis": {
        "domain": false,
        "ticks": false,
        "labelAngle": -65,
        "labelPadding": 10,
        "labelFontSize":13,
        "titleFontSize": 20
      }
    },
    "y": {
      "title": "Annual Crime Rate (%)",
      "field": "AnnualChange",
      "type": "quantitative",
      "scale": {"padding": 10},
      "axis": {
        "gridColor": {
          "condition": {"test": "datum.value === 0 ", "value": "black"},
          "value": "#ddd"
        },
        "labelFontSize": 13,
        "titleFontSize":17
      }
    }
  },
  "layer": [
    {
      "mark": {
        "type": "bar",
        "fill": {"expr": "datum.AnnualChange < 0 ?'green': 'red'"}
      },
      "encoding": {
        "tooltip": [
          {"field": "Year", "type": "ordinal"},
          {
            "field": "AnnualChange",
            "type": "quantitative",
            "title": "Crime Rate Change"
          }
        ]
      }
    }
  ],
  "background": "#fafafa",
  "view": {"stroke": "#fafafa"}
}